<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <Spinner
        android:id="@+id/listMemberRole_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/listMemberName_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listMemberName_label" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listmemberCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listMemberName_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="@color/textMain"
        android:textColorHint="@color/textSecondary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/listmemberCircle"
        app:layout_constraintEnd_toStartOf="@+id/listMemberRole_list"
        app:layout_constraintStart_toEndOf="@+id/listmemberCircle"
        app:layout_constraintTop_toTopOf="@+id/listmemberCircle" />

    <TextView
        android:id="@+id/listmemberChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="none"
        android:gravity="center"
        android:textColor="@color/textMain2"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/listmemberCircle"
        app:layout_constraintEnd_toEndOf="@+id/listmemberCircle"
        app:layout_constraintStart_toStartOf="@+id/listmemberCircle"
        app:layout_constraintTop_toTopOf="@+id/listmemberCircle" />
</androidx.constraintlayout.widget.ConstraintLayout>